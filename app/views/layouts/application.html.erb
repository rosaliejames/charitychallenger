<!DOCTYPE html>
<html>


<head>
  <title>CharityChallenger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

	<div id="header">

					<!-- Logo -->
						<h1><a href="index.html" id="logo">Charity Challenger <em></em></a></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<% if user_signed_in? %>
									<li><a href="#">Signed in as <%=current_user[:username]%></a></li>
									<li class="current"><a href=<%=root_path%>>Home</a></li>
									<li><a href="<%="/users/#{current_user.id}"%>">My Profile</a></li>
									<li><a href="<%=edit_user_registration_path%>">Edit Account</a></li>
									<li><%=link_to 'Sign Out', destroy_user_session_path, :method => 'DELETE' %></li>
								<% else %>
									<li><%=link_to 'Sign Up', new_user_registration_path%></li>
        							<li><a>Already Have An Account?</a></li>
        							<li><%=link_to 'Sign In', new_user_session_path %></li>
								<% end %>
							</ul>
						</nav>

				</div>
<%= yield %>



<div class="alert"><%= notice %></div>
<div class="notice"><%= alert %></div>
</body>


</html>
