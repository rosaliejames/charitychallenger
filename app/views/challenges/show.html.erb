<head> 
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
	<script src="http://code.highcharts.com/highcharts.js"></script>
<head>
<body>
<div class="container">

<div id="container" style="width:100%; height:400px;"></div>

<script> 
$(function() {
    Highcharts.setOptions({
        chart: {
            backgroundColor: {
                linearGradient: [0, 0, 500, 500],
                stops: [
                    [0, 'rgb(255, 255, 255)'],
                    [1, 'rgb(240, 240, 255)']
                    ]
            },
            borderWidth: 2,
            plotBackgroundColor: 'rgba(255, 255, 255, .9)',
            plotShadow: true,
            plotBorderWidth: 1
        }
    });
    
    var chart1 = new Highcharts.Chart({
        chart: {
            renderTo: 'container',
            type: 'column'
        },
		title: {
            text: 'My Challenge'
        },
        xAxis: {
            categories: [<%User.find(@challenge[:challenger_id]).username%>, <%User.find(@challenge[:challengee_id]).username%>, 'total']
        },
        yAxis: {
            title: {
                text: 'Money Raised'
            }
        },
        series: [{
            name: 'My Challenge',
            data: [<%=@challenge[:challenger_funds]%>, <%=@challenge[:challengee_funds]%>, <%=@challenge[:challenger_funds] + @challenge[:challengee_funds]%>]
        }],
    });
});
</script>


</div>
</body>